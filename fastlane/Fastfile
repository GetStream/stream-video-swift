desc 'Run source code formatting/linting'
lane :run_swift_format do |options|
  Dir.chdir('..') do
    strict = options[:strict] ? '--lint' : nil
    sh("swiftformat #{strict} --config .swiftformat .")
    sh("swiftlint lint --config .swiftlint.yml --fix --progress --quiet --reporter json") unless strict
    sh("swiftlint lint --config .swiftlint.yml --strict --progress --quiet --reporter json")
  end
end

