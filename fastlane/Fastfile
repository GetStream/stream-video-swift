before_all do |lane|
  if is_ci
    setup_ci
    xcversion(version: xcode_version) unless [:publish_release, :allure_launch, :allure_upload, :pod_lint, :stop_e2e_helpers].include?(lane)
  elsif lane == :test_e2e
    stop_e2e_helpers
  end
  create_credentials_config
end

